:javascript
  $( function() {
    var load_artists = function() {
      $.get( '/artists', function(data) {
        $('#content').html( data );
        $('ul').listnav({showCounts: false});
        $("a").click( function(e) {
          var artist = $(this).text();
          e.preventDefault();
          $.get( $(this).attr('href'), function(data) {
            $('#content').html(data);
            $('#header_artist').show();
            $('#header_artist h1').text(artist);
          });
        });
      });
    };
      
    $(".home_nav").click( function() {
      load_artists();
      $('#header_artist h1').text("");
      $('#header_artist').hide();
    });
  
    load_artists();
    
    try {
    _uacct = "UA-9156272-1";
    urchinTracker();
    } catch(err) {}
  });