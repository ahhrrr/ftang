!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", :"xml:lang" =>"en", :lang =>"en"}
  %head
    :javascript
      if((navigator.userAgent.match(/iPhone/i)) || (navigator.userAgent.match(/iPod/i)))
        {
        location.href='/iphone';
        }
    %title== Ftang! Player
    %link{:rel => "stylesheet", :type => "text/css", :href => "/style.css"}
    %script{:type => "text/javascript", :src => "http://jqueryjs.googlecode.com/files/jquery-1.3.js"}


  %body
    #header
      %h2
        %a{:href => '/'}
          Ftang! Player
        > All Covers
    #covers
      - @artists.each do |artist, albums|
        - unless albums.empty?
          %h2
            =artist
          - albums.each do |album|
            #cover
              %a{:href => "/play/#{artist}/#{album}"}
                %img{:src => "/music/#{artist}/#{album}/folder.jpeg", :width => '300px', :height => '300px', :style => "z-index:100"}
                %span{:style => "z-index:200"}
                  %br
                  %center
                    =album
          %br
          %hr